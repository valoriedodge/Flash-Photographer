<h1><%= @photographer.first_name%> <%= @photographer.last_name %></h1>
<%= form_for @photographer do |f| %>
  <div class="form-group">
    <%= f.label "Years of experience" %>
    <%= f.number_field :yrs_experience %>
  </div>

  <div class="form-group">
    <%= f.label :bio %>
    <%= f.text_area :bio, rows: 8, class: 'form-control', placeholder: "Enter personal bio" %>
  </div>

  <div class="field">
    <%= f.label :website %><br />
    <%= f.text_field :website, class: 'form-control', placeholder: "Enter personal website url" %>
  </div>

  <%= f.submit "Save", class: 'btn btn-success' %>
<% end %>
