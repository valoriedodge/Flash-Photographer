<div class="main"
<div id="myCarousel" class="carousel slide" data-ride="carousel">

<ol class="carousel-indicators">
  <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
  <li data-target="#myCarousel" data-slide-to="1"></li>
  <li data-target="#myCarousel" data-slide-to="2"></li>
  <li data-target="#myCarousel" data-slide-to="3"></li>
</ol>


<div class="carousel-inner" role="listbox">
  <div class="item active">
    <%= image_tag "Boat.JPG" %>
  </div>

  <div class="item">
    <%= image_tag "Ampitheatre.JPG" %>
  </div>

  <div class="item">
    <%= image_tag "Boat_fountain.JPG" %>
  </div>

  <div class="item">
    <%= image_tag "Pyramids.JPG" %>
  </div>
</div>
</div>
</div>


<div class="jumbotron">
  <h1><strong>Flash</br>
    Photographer</strong></h1>
    <h4>The easiest way to find a photographer</br>
    <em>anywhere</em> for <strong>any event</strong>.</h4>
</div>

<div class="col-md-6">
  <h3>Photographers Near You: </h3>
</div>
<div class="col-md-6">
  <%= form_tag photographers_path, method: :get %>
    <div class="form-group">
      <label for="search_zip_code">Search by zip code: </label>
      <%= text_field_tag :search_zip_code %>

  <%= submit_tag "Search", class: 'btn btn-info' %>
  </div>
</div>
  <div class="col-md-12">
    <% @photographers.each do |photographer| %>
    <% if photographer.confirmed? %>
      <h3><%= link_to "#{photographer.first_name} #{photographer.last_name}", photographer_path(id: photographer.id) %></h3>
      <% if photographer.yrs_experience? %>
        Years of Experience: <%= photographer.yrs_experience %>
        <% end %>

        <% if photographer.bio? %>
        <p><%= photographer.bio %> </p>
        <% end %>
    <%end%>
    <%end%>
  </div>
</div>
